            .col-xs-6
              .product__content
                .product__price.price
                  p.price__text Цена:
                    span.price__old  1200 грн
                  p.price__text Цена со скидкой:
                    span.price__new  975 грн
                  p.price__text Экономия: 
                    span.price__discount 245 грн (20%)

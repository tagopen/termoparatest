        .product.product--group1
          .row
            .col-xs-6
              .product__name Termoplaza 225
              .product__thumbnail 
                a.product__link.fancyimage.product__link--big(data-fancybox-group="group1" href="img/product11-big.png")
                  img.img-responsive.product__img.product__img--white(src='img/product11.png' alt='Termoplaza 255')
                a.product__link.fancyimage.product__link--big(data-fancybox-group="group1" href="img/product11-black-big.png")
                  img.hidden.img-responsive.product__img.product__img--black.hidden(src='img/product11-black.png' alt='Termoplaza 255')
